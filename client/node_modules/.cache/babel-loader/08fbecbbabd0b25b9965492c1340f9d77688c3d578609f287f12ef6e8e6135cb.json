{"ast":null,"code":"import { ref, computed } from 'vue';\nimport { useStore } from 'vuex';\nexport default {\n  name: 'SetProbabilitiesStep',\n  setup() {\n    const store = useStore();\n    const choices = computed(() => store.state.choices);\n    const probabilities = ref(choices.value.map(() => 100 / choices.value.length));\n    const normalizeProbabilities = () => {\n      const total = probabilities.value.reduce((sum, prob) => sum + Number(prob), 0);\n      probabilities.value = probabilities.value.map(prob => prob / total * 100);\n    };\n    const nextStep = () => {\n      store.commit('setProbabilities', probabilities.value);\n      store.commit('setCurrentStep', 4);\n    };\n    return {\n      choices,\n      probabilities,\n      normalizeProbabilities,\n      nextStep\n    };\n  }\n};","map":{"version":3,"names":["ref","computed","useStore","name","setup","store","choices","state","probabilities","value","map","length","normalizeProbabilities","total","reduce","sum","prob","Number","nextStep","commit"],"sources":["/Users/hyemin/Documents/Projects/decision-maker/client/src/components/SetProbabilitiesStep.vue"],"sourcesContent":["<template>\n  <div class=\"container set-probabilities-step\">\n    <div class=\"row justify-content-center\">\n      <div class=\"col-12 text-center\">\n        <h2>Set Probabilities (Optional)</h2>\n      </div>\n      <div class=\"col-12 col-md-8\">\n        <div v-for=\"(choice, index) in choices\" :key=\"index\" class=\"probability-input mb-3\">\n          <label class=\"form-label\">{{ choice }}</label>\n          <div class=\"d-flex align-items-center\">\n            <input type=\"range\" class=\"form-range me-2\" v-model=\"probabilities[index]\" min=\"0\" max=\"100\" @input=\"normalizeProbabilities\">\n            <span>{{ probabilities[index] }}%</span>\n          </div>\n        </div>\n      </div>\n      <div class=\"col-12 text-center mt-3\">\n        <button class=\"btn btn-success\" @click=\"nextStep\">Next</button>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nimport { ref, computed } from 'vue'\nimport { useStore } from 'vuex'\n\nexport default {\n  name: 'SetProbabilitiesStep',\n  setup() {\n    const store = useStore()\n    const choices = computed(() => store.state.choices)\n    const probabilities = ref(choices.value.map(() => 100 / choices.value.length))\n\n    const normalizeProbabilities = () => {\n      const total = probabilities.value.reduce((sum, prob) => sum + Number(prob), 0)\n      probabilities.value = probabilities.value.map(prob => (prob / total) * 100)\n    }\n\n    const nextStep = () => {\n      store.commit('setProbabilities', probabilities.value)\n      store.commit('setCurrentStep', 4)\n    }\n\n    return {\n      choices,\n      probabilities,\n      normalizeProbabilities,\n      nextStep\n    }\n  }\n}\n</script>\n\n<style lang=\"scss\" scoped>\n.set-probabilities-step {\n  padding: 2rem;\n  text-align: center;\n\n  h2 {\n    margin-bottom: 1.5rem;\n    color: #333;\n  }\n\n  .probability-input {\n    display: flex;\n    flex-direction: column;\n    align-items: center;\n    margin-bottom: 1rem;\n\n    label {\n      font-weight: bold;\n      margin-bottom: 0.5rem;\n    }\n\n    .form-range {\n      width: 100%;\n    }\n\n    span {\n      margin-left: 1rem;\n    }\n  }\n\n  button {\n    margin-top: 1.5rem;\n    padding: 10px 20px;\n    font-size: 18px;\n    cursor: pointer;\n  }\n}\n</style>\n"],"mappings":"AAuBA,SAASA,GAAG,EAAEC,QAAO,QAAS,KAAI;AAClC,SAASC,QAAO,QAAS,MAAK;AAE9B,eAAe;EACbC,IAAI,EAAE,sBAAsB;EAC5BC,KAAKA,CAAA,EAAG;IACN,MAAMC,KAAI,GAAIH,QAAQ,CAAC;IACvB,MAAMI,OAAM,GAAIL,QAAQ,CAAC,MAAMI,KAAK,CAACE,KAAK,CAACD,OAAO;IAClD,MAAME,aAAY,GAAIR,GAAG,CAACM,OAAO,CAACG,KAAK,CAACC,GAAG,CAAC,MAAM,GAAE,GAAIJ,OAAO,CAACG,KAAK,CAACE,MAAM,CAAC;IAE7E,MAAMC,sBAAqB,GAAIA,CAAA,KAAM;MACnC,MAAMC,KAAI,GAAIL,aAAa,CAACC,KAAK,CAACK,MAAM,CAAC,CAACC,GAAG,EAAEC,IAAI,KAAKD,GAAE,GAAIE,MAAM,CAACD,IAAI,CAAC,EAAE,CAAC;MAC7ER,aAAa,CAACC,KAAI,GAAID,aAAa,CAACC